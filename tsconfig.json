{
    "compilerOptions": {
        "target": "ES5", 
        "module": "commonjs", 
        "moduleResolution": "node",
        "declaration": true, 
        "outDir": "dist", 
        "strict": true, 
        "strictNullChecks": true,
        "lib": ["ES2015", "DOM"], 
        "rootDir": "src", 
        "resolveJsonModule": true
    }, 
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "dist"]
}